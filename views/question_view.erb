<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4><%= @question.question %></h4>
      <ul>
        <% @question.answers.each do |answer| %>
          <li><%= answer.description %></li>
        <% end %>
      </ul>
      <br>
    </div>
    <div class="col-md-6">
      <h4>Edit Question</h4>
      <form class="form-group" action="/question" method="post">
        <input name="question_id" type="hidden" value="<%= @question.id %>">
        <input name="_method" type="hidden" value="patch">
        <input class="form-control" type="text" name="question-name">
        <br>
        <button type="submit" class="btn btn-success">Edit Question</button>
      </form>
      <!-- answers form -->
      <form class="form-group" action="/answer" method="post">
        <input name="question_id" type="hidden" value="<%= @question.id %>">
        <label for="answer-name">Enter Answer</label>
        <input class="form-control" type="text" name="answer-name">
        <br>
        <button type="submit" class="btn btn-success">Add Answer</button>
      </form>
      <!-- delete button -->
      <form action="/question" method="post">
        <input name="_method" type="hidden" value="delete">
        <input name="question_id" type="hidden" value="<%= @question.id %>">
        <button type="submit" class="btn btn-danger">Delete Question</button>
      </form>
    </div>
  </div>


  <a class="btn btn-success" href="/">Home</a>
</div>
